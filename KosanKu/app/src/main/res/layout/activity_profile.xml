<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="338dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="11dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white_dark2">

                <TextView
                    android:id="@+id/profile_Nama"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:textSize="22sp"
                    android:layout_marginTop="35dp"
                    android:textAlignment="center"
                    android:textColor="@color/Black"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/pp"
            android:layout_width="128dp"
            android:layout_height="107dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="108dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white_dark"></LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/lnEmail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="55dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="245dp"
            android:background="@color/white_dark"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/email" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnAlamat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="55dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="296dp"
            android:background="@color/white_dark"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/alamat" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnNohp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="55dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="347dp"
            android:background="@color/white_dark"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/call" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnEdit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="55dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="398dp"
            android:background="@color/white_dark"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/settings" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_ProfileEmail"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/pp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="55dp"
            android:layout_toEndOf="@+id/lnEmail"
            android:background="@color/white_dark"
            android:text="Email" />

        <Button
            android:id="@+id/btn_ProfileAlamat"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/pp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="81dp"
            android:layout_marginEnd="55dp"
            android:layout_toEndOf="@+id/lnAlamat"
            android:background="@color/white_dark"
            android:text="Alamat" />

        <Button
            android:id="@+id/btn_ProfileNohp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/pp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="132dp"
            android:layout_marginEnd="55dp"
            android:layout_toEndOf="@+id/lnNohp"
            android:background="@color/white_dark"
            android:text="No Hp/Telephone" />

        <Button
            android:id="@+id/btn_ProfileEdit"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/pp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="183dp"
            android:layout_marginEnd="55dp"
            android:layout_toEndOf="@+id/lnEdit"
            android:background="@color/white_dark"
            android:text="Edit Akun" />

        <Button
            android:id="@+id/Keluar"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="460dp"
            android:background="@color/dark_grey_blue"
            android:text="KELUAR"
            android:textColor="@color/white_two" />

    </RelativeLayout>



</LinearLayout>