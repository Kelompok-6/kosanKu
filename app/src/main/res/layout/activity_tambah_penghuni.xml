<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".TambahPenghuniActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="605dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_dark2"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white_two"
                android:paddingLeft="3dp"
                android:paddingRight="3dp">

                <EditText
                    android:id="@+id/txtTambahNama"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Transparan"
                    android:hint="Nama Penghuni"
                    android:textColor="@color/Black"
                    android:textSize="20dp"
                    android:inputType="textPersonName"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="65dp"
                android:background="@color/white_two"
                android:paddingLeft="3dp"
                android:paddingRight="3dp">

                <EditText
                    android:id="@+id/txtTambahAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Transparan"
                    android:hint="Alamat Asal"
                    android:textColor="@color/Black"
                    android:textSize="20dp"
                    android:inputType="textPersonName" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="130dp"
                android:layout_marginRight="190dp"
                android:background="@color/white_two"
                android:paddingLeft="3dp"
                android:paddingRight="3dp">

                <EditText
                    android:id="@+id/txtTambahUmur"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Transparan"
                    android:hint="Umur"
                    android:textColor="@color/Black"
                    android:textSize="20dp"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="-6dp"
                android:layout_marginTop="140dp"
                android:layout_marginEnd="124dp"
                android:text="Tahun"
                android:textSize="22sp" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="195dp"
                android:background="@color/white_two"
                android:paddingLeft="3dp"
                android:paddingRight="3dp">

                <EditText
                    android:id="@+id/txtTambahNohp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Transparan"
                    android:hint="No Handphone / Telephone"
                    android:textColor="@color/Black"
                    android:textSize="20dp"
                    android:inputType="number"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="260dp"
                android:background="@color/white_two"
                android:paddingLeft="3dp"
                android:paddingRight="3dp">

                <EditText
                    android:id="@+id/txtTambahPekerjaan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Transparan"
                    android:hint="Pekerjaan"
                    android:textColor="@color/Black"
                    android:textSize="20dp"
                    android:inputType="textPersonName" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="325dp"
                android:background="@color/white_two"
                android:paddingLeft="3dp"
                android:paddingRight="3dp">

                <EditText
                    android:id="@+id/txtTambahNoKamar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Transparan"
                    android:hint="No kamar yang ditempati"
                    android:textColor="@color/Black"
                    android:textSize="20dp"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="390dp"
                android:layout_marginRight="190dp"
                android:background="@color/white_two"
                android:paddingLeft="3dp"
                android:paddingRight="3dp">

                <EditText
                    android:id="@+id/txtTambahLamaTinggal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Transparan"
                    android:hint="Lama tinggal"
                    android:textColor="@color/Black"
                    android:textSize="20dp"
                    android:inputType="textPersonName" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="-6dp"
                android:layout_marginTop="400dp"
                android:layout_marginEnd="124dp"
                android:text="Bulan"
                android:textSize="22sp" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="455dp"
                android:background="@color/white_two"
                android:paddingLeft="3dp"
                android:paddingRight="3dp">

                <EditText
                    android:id="@+id/txtTambahStatusBayar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Transparan"
                    android:hint="Status pembayaran"
                    android:textColor="@color/Black"
                    android:textSize="20dp"
                    android:inputType="textPersonName" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="520dp"
                android:background="@color/white_two"
                android:paddingLeft="3dp"
                android:paddingRight="3dp">

                <EditText
                    android:id="@+id/txtJumlahBayar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Transparan"
                    android:hint="Bayar"
                    android:textColor="@color/Black"
                    android:textSize="20dp"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView3"
            app:layout_constraintVertical_bias="0.0"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_TambahPenghuni"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:background="@color/dark_grey_blue"
            android:text="TAMBAH"
            android:textSize="18sp"
            android:textColor="@color/white_dark"/>

    </LinearLayout>

</ScrollView>