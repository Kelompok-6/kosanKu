<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/viewPhoto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/white_dark" />

            <TextView
                android:id="@+id/txt_NamaPenghuni"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/viewPhoto"
                android:layout_marginTop="110dp"
                android:text=""
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_Asal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/viewPhoto"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="13dp"
                android:layout_toEndOf="@+id/viewPhoto"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_Pekerjaan"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/viewPhoto"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="19dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="13dp"
                android:layout_toEndOf="@+id/viewPhoto"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_Umur"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/viewPhoto"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="19dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="13dp"
                android:layout_toEndOf="@+id/viewPhoto"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_NoKamar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/viewPhoto"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="19dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="13dp"
                android:layout_toEndOf="@+id/viewPhoto"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_LamaTinggal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/viewPhoto"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="19dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="13dp"
                android:layout_toEndOf="@+id/viewPhoto"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_Pembayaran"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/viewPhoto"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="19dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="13dp"
                android:layout_toEndOf="@+id/viewPhoto"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_Nohp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/viewPhoto"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="19dp"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="13dp"
                android:layout_toEndOf="@+id/viewPhoto"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_JumlahBayar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/viewPhoto"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="19dp"
                android:layout_marginTop="140dp"
                android:layout_marginEnd="13dp"
                android:layout_toEndOf="@+id/viewPhoto"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textSize="0sp"
                android:id="@+id/txt_Id"/>

            <ImageView
                android:id="@+id/HapusPenghuni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_Nohp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="11dp"
                android:src="@drawable/delete" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>